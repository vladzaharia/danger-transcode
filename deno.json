{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@danger/transcode",
  "version": "1.0.0",
  "exports": "./src/main.ts",
  "tasks": {
    "start": "deno run --allow-read --allow-write --allow-run --allow-env src/main.ts",
    "dev": "deno run --watch --allow-read --allow-write --allow-run --allow-env src/main.ts",
    "setup": "bash scripts/setup.sh",
    "check": "deno check src/main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test --allow-read --allow-write --allow-run"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/async": "jsr:@std/async@^1.0.0",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
